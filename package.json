    "expect": "^27.1.0",
    "hamjest": "^3.7.2",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "pactum": "^3.0.18",
    "should": "^13.2.3",
    "start-server-and-test": "^1.13.1"
  },
  "pre-commit": {
